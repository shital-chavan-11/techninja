        shadowClass: 'wrapper shadow-square-right',
        teamBg:'team-card-1',
      },
      {
        image:'carrey.png',
        name  :'Carrey Johnson',
        designation:'Senior Developer',
        shadowClass: 'wrapper shadow-square-left',
        teamBg:'team-card-2',
      },
      {
        image:'ray.png',
        name  :'Ray Marie',
        designation:'Developer',
        shadowClass: 'wrapper shadow-square-right',
        teamBg:'team-card-3',
      },
      {
        image:'austin.png',
        name  :'Austin Min',
        designation:'Designer',
        shadowClass: 'wrapper shadow-square-left',
